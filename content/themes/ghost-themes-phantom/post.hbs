{{!< default}}

{{#post}}

    {{> post-meta}}

    <header class="animated fadeIn" {{#if image}}style="background-image: url({{image}})"{{/if}}>
        <div class="container" data-stellar-ratio="0.75">
            {{> title}}
            {{> sidebar}}
        </div>
    </header>

    <div class="push-article">

{{! Temporary indentation shift for Handlebars issue }}
{{> content}}

    </div>

    <div class="container">
        <div class="author animated fadeIn clearfix">
            {{#author}}
                <img src="{{image}}" alt="{{name}}" />
                <div class="info">
                    <a href="{{url}}" class="name">{{name}}</a>
                    <p class="bio">{{bio}}</p>
                    <p class="networks">
                        <ul>
                            <li><a href="https://github.com/slogsdon" title="Follow me on GitHub">slogsdon on GitHub</a></li>
                            <li><a href="https://twitter.com/shanelogsdon" title="Follow me on Twitter">shanelogsdon on Twitter</a></li>
                            <li><a href="https://plus.google.com/+ShaneLogsdon?rel=author" title="Follow me on Google+">Shane Logsdon on Google+</a></li>
                        </ul>
                    </p>
                </div>
            {{/author}}
        </div>
    </div>

    {{> comments}}

{{/post}}

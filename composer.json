{
  "name": "slogsdon/slogsdon.com",
  "homepage": "https://github.com/slogsdon/slogsdon.com",
  "license": "MIT",
  "authors": [
    {
      "name": "Shane Logsdon",
      "email": "shane@shanelogsdon.com",
      "homepage": "https://www.slogsdon.com",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.4",
    "johnpbloch/wordpress": "*",
    "roots/soil": "*",
    "slogsdon/simplify": "*@dev",
    "slogsdon/staticwp": "*@dev",
    "wpackagist-plugin/add-headers": "*",
    "wpackagist-plugin/akismet": "*",
    "wpackagist-plugin/jetpack": "*",
    "wpackagist-plugin/ninja-forms": "*",
    "wpackagist-plugin/redirection": "*",
    "wpackagist-plugin/redis-cache": "*",
    "wpackagist-plugin/segmentio": "*",
    "wpackagist-plugin/wordpress-seo": "*",
    "wpackagist-plugin/wpmandrill": "*"
  },
  "scripts": {
    "post-install-cmd": "bash src/post-install-update.sh",
    "post-update-cmd":  "bash src/post-install-update.sh"
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
      "wp/wp-content/plugins/{$name}": ["type:wordpress-plugin"],
      "wp/wp-content/themes/{$name}": ["type:wordpress-theme"],
      "wp/wp-content/mu-plugins/{$name}": ["type:wordpress-muplugin"]
    }
  }
}
